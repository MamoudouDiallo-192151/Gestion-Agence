{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}
{% block title %}
	{{property.title}}
{% endblock %}

{% block body %}

	<div class="container-fluid bg-light p-5">
		<div class="container">
			{% for message in app.flashes('success') %}
				<div class="alert alert-success">
					{{message}}
				</div>
			{% endfor %}
			{% if not form.vars.valid %}
				<div class="alert alert-danger">
					Erreur au niveau du formulaire
				</div>
			{% endif %}
			<div class="row">
				<div class="col-md-8 mt-2">
					{% if property.filename %}
						<div class="row">
							<img src="{{ vich_uploader_asset(property,'imageFile')}}" alt=" card-img-top" style=" width: 100%; height: 450px;">
						</div>
						<!--  |imagine_filter('medium')-->
					{% else %}
						<div class="row">
							<img src="{{'/images/properties/kfc_home.jpg' }}" alt=" card-img-top" style=" width: 90%; height: 200px;">
						</div>
					{% endif %}
				</div>
				<div class="col-md-4">
					<div class="card text-center" style="max-width: 18rem;max-height: 15em">
						<div class="card mb-3" style="max-width: 18rem;max-height: 10em">
							<div class="card-header">
								<h5>{{property.title}}</h5>
							</div>
						</div>
						<div class="card-body">
							<h5 class="card-title">{{property.rooms}}
								picèces -
								{{property.surface}}
								m2
							</h5>
							<p class="card-text">
								<div class="text-dark" style="font-size: 2rem;font-weigt: bold;">{{property.formattedPrice}}D</div>
							</p>
							<a href="#" id="contactButton" class=" btn btn-primary" {% if form.vars.submitted %} style="display: none" {% endif %}>Contacter l'agence</a>
						</div>
					</div>
					<div class="mt-4" id="contactForm" {% if not form.vars.submitted %} style="display: none" {% endif %}>
						{{form_start(form)}}
						<div class="row">
							<div class="col">{{form_row(form.firstname)}}</div>
							<div class="col">{{form_row(form.lastname)}}</div>
						</div>
						<div class="row">
							<div class="col">{{form_row(form.phone)}}</div>
							<div class="col">{{form_row(form.email)}}</div>
						</div>
						{{form_rest(form)}}
						<input type="submit" class="btn btn-primary" value="{{valeurBtnSubmit|default("Enrégistrer")}}" formnovalidate>
						{{form_end(form)}}
					</div>
				</div>
			</div>
		</div>
		<div class="container mt-1">
			<p>{{property.description | nl2br}}</p>
			<div class="row">
				<div class="col-md-8">
					<h2>Caractéristique</h2>
					<table class="table table-hover">
						<tr>
							<td>Surface habitable</td>
							<td>{{property.surface}}
								m2</td>
						</tr>
						<tr>
							<td>Pièces</td>
							<td>{{property.rooms}}</td>
						</tr>
						<tr>
							<td>Chambres</td>
							<td>{{property.bedrooms}}</td>
						</tr>
						<tr>
							<td>Etage</td>
							<td>{{property.floor}}</td>
						</tr>
						<tr>
							<td>Chauffage</td>
							<td>{{property.getHeatType()}}</td>
						</tr>
					</table>
				</div>
				<div class="col-md-4 mt-2">
					<h2>Spécificités</h2>
					<ul class="list-group">
						{% for option in property.options %}
							<li class="list-group-item">{{option.name}}</li>
						{% endfor %}
					</ul>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
