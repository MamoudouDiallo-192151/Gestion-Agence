{% extends 'base.html.twig' %}

{% block title %}
	{{property.title}}
{% endblock %}

{% block body %}
	<div class="jumbotron">
		<div class="container">
			<div class="row">
				<div class="col-md-8 mt-2">
					{% if property.filename %}
						<div class="row">
							<img src="{{ vich_uploader_asset(property,'imageFile')| imagine_filter('medium')}}" alt=" card-img-top" style=" width: 90%; height: 200px;">
						</div>
						<!--  |imagine_filter('medium')-->
					{% else %}
						<div class="row">
							<img src="{{'/images/properties/kfc_home.jpg' }}" alt=" card-img-top" style=" width: 90%; height: 200px;">
						</div>
					{% endif %}
				</div>
				<div class="col-md-4">
					<div class="card" style="max-width: 18rem;max-height: 15em">
						<div class="card text-white bg-primary mb-3" style="max-width: 18rem;max-height: 10em">
							<div class="card-header">
								<h3>{{property.title}}</h3>
							</div>
						</div>
						<div class="card-body">
							<h5 class="card-title">{{property.rooms}}
								picèces -
								{{property.surface}}
								m2</h5>
							<p class="card-text">
								<div class="text-primary" style="font-size: 2rem;font-weigt: bold;">{{property.formattedPrice}}D</div>
							</p>
							<a href="a" class=" btn btn-primary">Contacter l'agence</a>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="container mt-4">
			<p>{{property.description | nl2br}}</p>
			<div class="row">
				<div class="col-md-8">
					<h2>Caractéristique</h2>
					<table class="table table-hover">
						<tr>
							<td>Surface habitable</td>
							<td>{{property.surface}}
								m2</td>
						</tr>
						<tr>
							<td>Pièces</td>
							<td>{{property.rooms}}</td>
						</tr>
						<tr>
							<td>Chambres</td>
							<td>{{property.bedrooms}}</td>
						</tr>
						<tr>
							<td>Etage</td>
							<td>{{property.floor}}</td>
						</tr>
						<tr>
							<td>Chauffage</td>
							<td>{{property.getHeatType()}}</td>
						</tr>
					</table>
				</div>
				<div class="col-md-4 mt-2">
					<h2>Spécificités</h2>
					<ul class="list-group">
						{% for option in property.options %}
							<li class="list-group-item">{{option.name}}</li>
						{% endfor %}
					</ul>
				</div>

			</div>
		</div>
	</td>
</tr></td></tr></td></tr>{% endblock %}
